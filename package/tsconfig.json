{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": true,
    "moduleResolution": "node16",
    "strictNullChecks": true,
    "declaration": true,
    "importsNotUsedAsValues": "error",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts"
  ]
}
