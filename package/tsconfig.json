{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "declaration": true,
    "importsNotUsedAsValues": "error",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
    //    "**/*.test.*" // this should be set via command line flag but I can't find how to do it
  ],
  "include": [
    "src/**/*.ts"
  ]
}
